<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ram.e_commerceapp.ContractFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/contract_bg">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


    </LinearLayout>

    <EditText
        android:id="@+id/etName"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@mipmap/ic_3"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:hint=" Person Name  "
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="65dp"
        tools:ignore="RtlSymmetry,UseCompatTextViewDrawableXml">


    </EditText>


    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="20dp"
        android:paddingStart="35dp"
        android:textAlignment="viewStart"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="512dp"
        android:ems="10"
        android:hint="Mobile Number "
        android:inputType="phone"
        android:padding="10dp"
        android:paddingLeft="60dp"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        tools:layout_editor_absoluteX="65dp"
        tools:ignore="HardcodedText,RtlSymmetry,UseCompatTextViewDrawableXml">

    </EditText>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_background_1"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="20dp"
        android:paddingStart="40dp"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="512dp"
        android:ems="10"
        android:hint="Email "
        android:inputType="textEmailAddress"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/etPhone"
        tools:layout_editor_absoluteX="65dp"
        tools:ignore="RtlSymmetry,UseCompatTextViewDrawableXml">
    </EditText>

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/btn_background_1"
        android:paddingStart="80dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="512dp"
        android:ems="10"
        android:hint="Subject: "
        android:inputType="textEmailAddress"
        android:padding="10dp"
        tools:layout_editor_absoluteX="65dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmail"
        tools:ignore="RtlSymmetry,UseCompatTextViewDrawableXml">
    </EditText>


    <EditText
        android:id="@+id/etDesc"
        android:layout_width="406dp"
        android:layout_height="132dp"
        android:background="@drawable/btn_background_1"
        android:ems="10"
        android:hint="Description "
        android:inputType="textEmailAddress"
        android:paddingStart="80dp"
        android:textAlignment="viewStart"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/etSubject"
        tools:ignore="MissingConstraints,RtlSymmetry,UseCompatTextViewDrawableXml"
        tools:layout_editor_absoluteX="2dp">

    </EditText>

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDesc"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_call"
            android:background="@drawable/ic_phone"/>


        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="200dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_email"
            android:background="@drawable/ic_email"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>